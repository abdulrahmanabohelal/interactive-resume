    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            const timelineData = {
                labels: ['Site Engineer (MFJV)', 'Bridge Tech. Office Eng. (MG Consultant)', 'BIM Structural Eng. (SIAC)'],
                datasets: [{
                    label: 'Job Tenure (Months)',
                    data: [14, 15, 6],
                    backgroundColor: ['#64748b', '#38bdf8', '#0ea5e9'],
                    borderColor: '#ffffff',
                    borderWidth: 2,
                    borderRadius: 4,
                    borderSkipped: false,
                }]
            };

            const bimSkillsData = {
                labels: ['Autodesk Revit', 'Navisworks', 'AutoCAD Structural Detailing', 'Tekla Structures', 'AutoCAD'],
                datasets: [{
                    label: 'Proficiency',
                    data: [90, 85, 80, 70, 85],
                    backgroundColor: '#38bdf8',
                    borderColor: '#0284c7',
                    borderWidth: 1,
                    borderRadius: 4,
                }]
            };

            const analysisSkillsData = {
                labels: ['Autodesk Civil 3D', 'SAP2000', 'ETABS', 'SAFE'],
                datasets: [{
                    label: 'Proficiency',
                    data: [85, 80, 80, 75],
                    backgroundColor: '#64748b',
                    borderColor: '#475569',
                    borderWidth: 1,
                    borderRadius: 4,
                }]
            };

            const chartOptions = (indexAxis = 'y', displayLegend = false, displayTitle = '') => ({
                indexAxis,
                maintainAspectRatio: false,
                responsive: true,
                scales: {
                    x: {
                        beginAtZero: true,
                        grid: {
                            display: false,
                            drawBorder: false,
                        },
                        ticks: {
                            font: { size: 10 }
                        }
                    },
                    y: {
                        grid: {
                            display: false,
                            drawBorder: false,
                        },
                        ticks: {
                            font: { size: 12 }
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: displayLegend,
                        position: 'bottom',
                    },
                    title: {
                        display: !!displayTitle,
                        text: displayTitle,
                        font: { size: 14, weight: 'bold' },
                        padding: { top: 10, bottom: 20 }
                    },
                    tooltip: {
                        backgroundColor: '#1e293b',
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 12 },
                        padding: 10,
                        cornerRadius: 4,
                        displayColors: false,
                    }
                }
            });
            
            const timelineOptions = chartOptions('y', true);
            timelineOptions.plugins.tooltip.callbacks = {
                label: function(context) {
                    let label = context.dataset.label || '';
                    if (label) {
                        label += ': ';
                    }
                    if (context.parsed.x !== null) {
                        label += context.parsed.x + ' months';
                    }
                    return label;
                }
            };

            const skillsOptions = chartOptions('y', false);
            skillsOptions.scales.x.max = 100;
            skillsOptions.plugins.tooltip.callbacks = {
                label: function(context) {
                    const value = context.parsed.x;
                    let proficiency = 'Proficient';
                    if (value >= 85) proficiency = 'Advanced';
                    if (value >= 95) proficiency = 'Expert';
                    return `${proficiency} (${value}%)`;
                }
            };

            const timelineCtx = document.getElementById('timelineChart')?.getContext('2d');
            if(timelineCtx) new Chart(timelineCtx, { type: 'bar', data: timelineData, options: timelineOptions });

            const bimSkillsCtx = document.getElementById('bimSkillsChart')?.getContext('2d');
            if(bimSkillsCtx) new Chart(bimSkillsCtx, { type: 'bar', data: bimSkillsData, options: skillsOptions });

            const analysisSkillsCtx = document.getElementById('analysisSkillsChart')?.getContext('2d');
            if(analysisSkillsCtx) new Chart(analysisSkillsCtx, { type: 'bar', data: analysisSkillsData, options: { ...skillsOptions } });

            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('main section');

            function updateActiveLink() {
                let currentSection = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (window.scrollY >= sectionTop - 120) {
                        currentSection = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.dataset.target === currentSection) {
                        link.classList.add('active');
                    }
                });
            }

            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.dataset.target;
                    const targetElement = document.getElementById(targetId);
                    if (targetElement) {
                        targetElement.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });

            window.addEventListener('scroll', updateActiveLink);
            updateActiveLink(); 

            document.querySelectorAll('.project-item button').forEach(button => {
                button.addEventListener('click', () => {
                    const item = button.parentElement;
                    const detailsDiv = item.querySelector('.project-details');
                    const detailsText = item.dataset.details;
                    
                    if (detailsDiv.classList.contains('hidden')) {
                        detailsDiv.innerHTML = `<p>${detailsText}</p>`;
                        detailsDiv.classList.remove('hidden');
                        button.classList.add('bg-sky-50');
                    } else {
                        detailsDiv.classList.add('hidden');
                        detailsDiv.innerHTML = '';
                        button.classList.remove('bg-sky-50');
                    }
                });
            });
        });
    </script>

</body>
</html>
